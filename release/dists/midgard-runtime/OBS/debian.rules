#! /usr/bin/make -f

#export DH_VERBOSE=1
export DH_COMPAT=4
export DH_OPTIONS

DEB_HOST_GNU_TYPE ?= $(shell dpkg-architecture -qDEB_HOST_GNU_TYPE)
DEB_BUILD_GNU_TYPE  ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_TYPE)
DEB_BUILD_ARCH   ?= $(shell dpkg-architecture -qDEB_BUILD_ARCH)

switch-arch:
	 sed -e 's/Architecture: any/Architecture: ${DEB_BUILD_ARCH}/g' debian/control > control.dummy
	 mv control.dummy debian/control

clean:
	dh_testdir
	-$(MAKE) distclean
	rm -f build-stamp configure-stamp
	rm -f Makefile
	rm -f src/Makefile
	dh_clean

install: DH_OPTIONS=
install:
	dh_testdir
	dh_testroot
	dh_clean
	dh_installdirs
	qmake DESTDIR=${PWD}/debian/midgard2-runtime/usr/bin
	$(MAKE) 
	$(MAKE) install
	cp src/midgard2-runtime-installer ${PWD}/debian/midgard2-runtime/usr/bin
	dh_install --sourcedir=${PWD}/debian/midgard2-runtime
	
binary-indep: DH_OPTIONS=-i
binary-indep:
# nothing to do

binary-indep: DH_OPTIONS=-a
binary-arch:install
	dh_testdir
	dh_testroot
	dh_installdocs 
	dh_installchangelogs
	dh_makeshlibs -V
	dh_shlibdeps -s
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb	
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary:	switch-arch binary-indep binary-arch
.PHONY: switch-arch binary binary-arch binary-indep install clean configure build clean
